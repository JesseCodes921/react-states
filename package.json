{
  "name": "react-states",
  "version": "3.0.0",
  "description": "Explicit states for predictable user experiences",
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "repository": "git+https://github.com/christianalfoni/react-states.git",
  "module": "index.js",
  "main": "cjs/index.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc --outDir . --module es2015 && tsc --outDir cjs --module commonjs",
    "clean": "rimraf cjs devtools/*.ts devtools/*.js devtools/*.map index.d.ts index.test.d.ts result.d.ts result.js result.js.map",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --format stylish",
    "format": "prettier '**/*.{md,js,jsx,json,ts,tsx}' --write",
    "test": "jest --env=jsdom --coverage",
    "test:watch": "jest --env=jsdom --watch --updateSnapshot",
    "prebuild": "npm run clean",
    "postbuild": "rimraf {lib,es}/**/__tests__ {lib,es}/**/*.{spec,test}.{js,d.ts,js.map}",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "prepublish": "yarn build"
  },
  "keywords": [
    "typescript",
    "react",
    "reducer",
    "state",
    "statemachine"
  ],
  "files": [
    "cjs",
    "devtools",
    "index.js",
    "index.js.map",
    "index.d.ts",
    "result.d.ts",
    "result.js",
    "result.js.map"
  ],
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@types/node": "^8.0.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "dts-bundle": "^0.7.2",
    "jest": "^23.0.0",
    "pascal-case": "^2.0.1",
    "prettier": "^1.13.7",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^2.6.1",
    "semver": "^6.3.0",
    "ts-jest": "~23.10.0",
    "tslib": "^2.1.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^4.1.3",
    "vite": "^2.0.5"
  }
}
