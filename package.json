{
  "name": "react-states",
  "version": "2.1.3",
  "description": "Explicit states for predictable user experiences",
  "author": "Christian Alfoni <christianalfoni@gmail.com>",
  "license": "MIT",
  "repository": "git+https://github.com/christianalfoni/react-states.git",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib & npm run build:es",
    "build:lib": "tsc --outDir lib --module commonjs",
    "build:es": "tsc --outDir es --module es2015",
    "clean": "rimraf es lib coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tslint --project tsconfig.json --format stylish",
    "format": "prettier '**/*.{md,js,jsx,json,ts,tsx}' --write",
    "test": "jest --env=jsdom --coverage",
    "test:watch": "jest --env=jsdom --watch --updateSnapshot",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean",
    "postbuild": "rimraf {lib,es}/**/__tests__ {lib,es}/**/*.{spec,test}.{js,d.ts,js.map}",
    "posttest": "npm run typecheck && npm run lint",
    "preversion": "npm test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "typescript",
    "react",
    "reducer",
    "state",
    "statemachine"
  ],
  "files": [
    "lib",
    "es",
    "dist",
    "devtools"
  ],
  "dependencies": {
    "@types/node": "^8.0.0",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "tslib": "^2.1.0",
    "react": "*"
  },
  "devDependencies": {
    "@types/jest": "^23.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "dts-bundle": "^0.7.2",
    "jest": "^23.0.0",
    "pascal-case": "^2.0.1",
    "prettier": "^1.13.7",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.66.6",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-builtins": "^2.1.0",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-plugin-terser": "^3.0.0",
    "semver": "^6.3.0",
    "ts-jest": "~23.10.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^4.1.3",
    "vite": "^2.0.5"
  }
}
